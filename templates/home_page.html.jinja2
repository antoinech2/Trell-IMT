<htlm>
{% include 'components/header.html.jinja2' %}

<link rel="stylesheet" href="{{ url_for("static", filename="css/home_page.css") }}"/>
<div class="all boards">
    <div class="creating a project">
        <h2>Create a new project</h2>
        <div class="find_menu">
            <h6>Buy some time with a Trell-IMT template</h6>
            <div class="find">
                <nav>
                    <ul>
                        <li class="roll"><a href="#">Find a template</a>
                            <ul class="under">
                                <li><a href="/create_project">Classic</a></li>
                                <li><a href="#">Special</a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
        </div>
    </div>
    <div class="access my projects">
        <h2>Access to an existing project</h2>
        <div class="find_menu">
            <h6>Continue a recent project or find another one</h6>
        </div>
        <div class="selection_menu">
            {% for board in boards %}
                <button onclick="window.location.href='/board/{{ board.id }}'" class="access_project_button col-xl-3 col-sm-6 col-12" >{{ board.name }}</button>
            {% endfor %}
        </div>
    </div>
</div>
</htlm>