
<div class="col-12">
    <div class="task__header">
        <h6 class="task__title">{{ title }}</h6>
    </div>
    <div class="description">
        <p class="task__description">{{ description }}</p>
    </div>
<div class="expire_container">
    {% if expires %}
        {% if has_expired %}
            <div class="late">
            <i class="bi bi-calendar2-x late"></i> {{ expires }}
            </div>
        {% endif %}
        {% if not has_expired %}
<i class="bi bi-calendar2-check time_ok"></i><span> {{ expires }}</span>
        {% endif %}
    {% endif %}
</div>
    <div class="progress-container">
        <div class="progress" role="progressbar" aria-label="task_progression" aria-valuenow="25" aria-valuemin="0"
             aria-valuemax="100">
            <div class="progress-bar bg-success" style="width: 25%">25%</div>
        </div>
    </div>
    <div class="working-team">
        <ul id="user-image">
            {% for user in users %}
                <li><img src="{{ user }}" alt="Description de l'image 1" class="small-image"></li>
            {% endfor %}
        </ul>
    </div>
</div>
